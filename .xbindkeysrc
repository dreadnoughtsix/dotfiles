# Increase volume with media volume key
"amixer -q sset Master 1%+"
   XF86AudioRaiseVolume

# Decrease volume with media volume key
"amixer -q sset Master 1%-"
   XF86AudioLowerVolume

# Mute volume
"/home/cjcc/bin/toggle_mute.sh"
   XF86AudioMute

# Lock screen
"xscreensaver-command --lock"
   Alt + Alt_L + l

# Toggle touchpad on or off
"synclient TouchpadOff=$(synclient -l | grep -c 'TouchpadOff.*=.*0')"
   XF86TouchpadToggle

# Show logout screen
"lxsession-logout"
   Control + grave

# Mozilla Firefox shortcut
"firefox"
   Control + F3

# Pidgin shortcut
"pidgin"
   Control + F4

# Thunderbird shortcut
"thunderbird"
   Control + F5

# Toggle dual screen
"~/bin/toggle_dual_screen.sh"
    XF86Launch1
